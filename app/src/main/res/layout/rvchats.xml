<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        >
        <ImageView
            android:id="@+id/imgAvtChat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pic1"
            ></ImageView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtNameChat"
            android:layout_width="wrap_content"
            android:text="My crush"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtlastChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Em an com chua?"
            android:textSize="15dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        >
        <TextView
            android:id="@+id/txtTimeChat"
            android:layout_width="wrap_content"
            android:text="now"
            android:textSize="18sp"
            android:fontFamily="@font/mulish"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtUnread"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:fontFamily="@font/mulish"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/custom_count_unread"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>